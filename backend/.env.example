# Backend Configuration
PORT=3001

# Jira API Configuration (KEEP THESE SECRET - SERVER SIDE ONLY)
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-api-token-here

# Security Configuration
JWT_SECRET=your-very-secure-jwt-secret-here-256-bits-minimum
CORS_ORIGIN=http://10.0.0.63:3000

# Session Management (HIPAA Compliance)
SESSION_TIMEOUT=900000
MAX_SESSION_TIMEOUT=3600000
SESSION_SECRET=your-session-secret-key-here

# Audit & Compliance Configuration
AUDIT_ENCRYPTION_KEY=your-audit-encryption-key-256-bits
AUDIT_LOG_RETENTION_DAYS=2555
PHI_DETECTION_ENABLED=true
COMPLIANCE_MODE=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Local Admin Account (Change on first login)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=ChangeMe123!
DEFAULT_ADMIN_EMAIL=admin@localhost

# Azure AD / Entra ID Configuration (Optional)
AZURE_AD_ENABLED=false
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_REDIRECT_URL=http://localhost:3001/auth/azure/callback

# Logging Level
LOG_LEVEL=info
NODE_ENV=development
